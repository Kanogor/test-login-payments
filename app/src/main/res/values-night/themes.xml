<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.TestLoginPayments" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="background">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LoginTextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="colorPrimary">@color/grey_hint</item>
        <item name="colorAccent">@color/grey_hint</item>
    </style>

    <style name="GreenButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/color_enabled</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">15dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="minHeight">48dp</item>
    </style>

    <style name="Theme.TestLoginPayments" parent="Base.Theme.TestLoginPayments" />
</resources>